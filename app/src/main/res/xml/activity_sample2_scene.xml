<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="600">
        <OnClick motion:targetId="@id/fabIcon" motion:clickAction="toggle"/>

        <!--<OnSwipe
            motion:touchAnchorId="@+id/fab"
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right"
            motion:touchRegionId="@+id/fab" />-->
        <KeyFrameSet >
            <KeyAttribute
                motion:motionTarget="@+id/saveButton"
                motion:framePosition="50"
                android:alpha="0" />
            <KeyPosition
                motion:motionTarget="@+id/fab"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:percentY="-0.5" />
            <KeyPosition
                motion:motionTarget="@+id/saveButton"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:percentY="-0.468"
                motion:percentX="0.447" />
            <KeyPosition
                motion:motionTarget="@+id/fabIcon"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:percentY="-0.424"
                motion:percentX="0.564" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/fab"
            android:layout_width="52dp"
            android:layout_height="52dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="26dp" />
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="@color/purple_700" />
        </Constraint>
        <Constraint
            android:id="@+id/saveButton"
            android:elevation="32dp"
            motion:layout_constraintEnd_toEndOf="@id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/fab"
            android:layout_marginBottom="10dp"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="@id/fab" />
        <Constraint
            android:id="@+id/fabIcon"
            motion:layout_constraintEnd_toEndOf="@id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/fab"
            motion:layout_constraintTop_toTopOf="@id/fab"
            motion:layout_constraintStart_toStartOf="@id/fab">
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/colorPrimaryLight" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end" motion:deriveConstraintsFrom="@id/start">
        <Constraint
            android:id="@+id/fab"
            android:layout_width="120dp"
            android:layout_height="120dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="7dp" />
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="@color/teal_200" />
        </Constraint>
        <Constraint
            android:id="@+id/saveButton"
            android:elevation="32dp"
            motion:layout_constraintEnd_toEndOf="@id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/fab"
            android:layout_marginBottom="10dp"
            motion:layout_constraintStart_toStartOf="@id/fab"
            android:alpha="1" />
        <Constraint
            android:id="@+id/fabIcon"
            motion:layout_constraintEnd_toEndOf="@id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@id/fab"
            android:rotation="45" >
            <CustomAttribute
                motion:attributeName="colorFilter"
                motion:customColorValue="@color/purple_700" />
        </Constraint>
    </ConstraintSet>
</MotionScene>